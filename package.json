{
  "devDependencies": {
    "eslint": "^8.34.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4"
  },
  "scripts": {
    "test": "node src/js/joker.js",
    "lint": "eslint src/**/*.js",
    "lint-fix": "eslint src/**/*.js --cache --fix",
    "prepare": "husky install"
  },
  "version": "0.0.4",
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.html": [
      "prettier --write"
    ],
    "*.scss": [
      "prettier --write"
    ],
    "*.{js,css,md}": "prettier --write"
  }
}
